#include<stdio.h>
int main()
{
    int a,b;
    char op;
    printf("enter the a,b and op:");
    scanf("%d%d %c",&a,&b,&op);
    switch(op)
    {
 case'+':
 printf("the addition of 2 numbers : %d",a+b);
 break;
 case'-':
 printf("the subtraction of 2 numbers :%d",a-b);
 break;
case'*':
printf("the multiplication of 2 numbers : %d",a*b);
break;
case'/':
printf("the division of 2 numbers: %d",a/b);
break;
case'%':
printf("the modulus of 2 numbers : %d",a%b);
break;
default:
printf("%c is not a valid operater");
break;
return 0;
    }
}
